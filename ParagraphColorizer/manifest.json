{
  "manifest_version": 2,
  "name": "ParagraphColorizer",
  "version": "1",
  "permissions": ["tabs"],
  "content_scripts" : [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "ct.png",
    "default_title": "Press me to color your page"
  }
}